{
  "name": "cf_ai_supportbot",
  "version": "1.0.0",
  "description": "AI-powered support bot built on Cloudflare infrastructure",
  "main": "workers/api.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run tests/",
    "test:integration": "vitest --run tests/ --config vitest.integration.config.ts",
    "test:load": "k6 run tests/load/k6-runner.js",
    "test:chaos": "vitest --run tests/chaos/",
    "test:performance": "vitest --run tests/performance/",
    "test:comprehensive": "./scripts/run-comprehensive-tests.sh",
    "optimize:performance": "./scripts/performance-optimization.sh",
    "profile:memory": "vitest --run tests/performance/performance_validation.test.ts --reporter=verbose",
    "build": "tsc",
    "build:frontend": "node build-frontend.js",
    "pages:dev": "npm run build:frontend && wrangler pages dev pages/dist",
    "pages:deploy": "npm run build:frontend && wrangler pages deploy pages/dist"
  },
  "keywords": [
    "ai",
    "chatbot",
    "cloudflare",
    "workers",
    "llama"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.78.0"
  },
  "dependencies": {
    "@cloudflare/ai": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
